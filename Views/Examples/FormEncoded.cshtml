@{
    ViewData["Title"] = "Form URL Encoded";
}

<h1>@ViewData["Title"]</h1>

<p>Examples for application/x-www-form-urlencoded</p>

<div>
    <div class="btn btn-primary" id="btnGet">GET</div>
    <div><small class="form-text text-muted"></small></div>
</div>

<hr />

<div>
    <div class="btn btn-primary" id="btnPost">POST</div>
    <div><small class="form-text text-muted"></small></div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function(){
            $('#btnGet').on('click', function(){
                $.get('@Url.Action("")', function(data){
                    alert(data);
                });
            });
            $('#btnPost').on('click', function(){
                $.post('@Url.Action("")', {name: "test"}, function(data){
                    alert(data);
                });
            });
        });
    </script>
}